<% if current_user %>
  <div class="page-header">
    <h1>Algumas informações sobre você...</h1>
  </div>
  <div class="panel panel-default">
    <div class="panel-body">
      <ul>
        <li><strong>Nome:</strong> <%= current_user.name %></li>
        <li><strong>Avatar URL:</strong> <%= current_user.image_url %></li>
        <li><strong>Perfil URL:</strong> <%= current_user.url %></li>
      </ul>
    </div>
  </div>
<% else %>
  	<div class="jumbotron">
	  <h1>Bem vindo!</h1>
	  <p>Autentique com o Facebook para continuar.</p>
	</div>
<% end %>